<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.image_size_index),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "micropost.post", param1: time_ago_in_words(micropost.created_at)  %>
    <% if current_user? micropost.user %>
      <%= link_to t("action.delete"), micropost, method: :delete,
                                      data: { confirm: t("micropost.confirm")} %>
    <% end %>
  </span>
</li>
